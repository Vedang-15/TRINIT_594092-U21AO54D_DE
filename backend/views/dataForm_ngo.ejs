<%- include('partials/header') %>


    <form action="/collect_data_ngo" method="post">
      <h3 class="testimonials-head datasubmit">About you</h3>
      <div class="row">
        <div class="col-md-6 col-sm-12">
            <input name="name" type="text" placeholder="Name" class="box"><br>
            <input name="number" type="text" placeholder="Contact Number" class="box"><br>
            <input name="address" type="text" placeholder="Your address" class="box"><br>
            <input name="email" type="email" placeholder="Email" class="box"><br>
            <input name="mission" type="text" placeholder="Your Mission" class="box"><br>
            <input name="fundingNeeds" type="text" placeholder="fundingNeeds" class="box"><br>
            <input name="history" type="text" placeholder="Your history" class="box"><br>
        </div>

        <div class="col-md-6 col-sm-12">
            <input name="previousWork" type="text" placeholder="previousWork" class="box"><br>
            <input name="howToAchieveGoal" type="text" placeholder="howToAchieveGoal" class="box"><br>
            <input name="ngoid" type="text" placeholder="ngoid" class="box"><br>
            <input name="socialUrl" type="text" placeholder="socialUrl" class="box"><br>
            <input name="website" type="text" placeholder="website" class="box"><br>
            <input name="achievement" type="text" placeholder="achievement" class="box"><br>
            <div class="">
              <strong class = "sign-text">Area of work:</strong>
              </br>
              <select name="work" id="multiple-checkboxes" multiple="multiple">
                  <option value="Children">Children</option>
                  <option value="Health">Health</option>
                  <option value="Education">Education</option>
                  <option value="Environment advocacy">Environment advocacy</option>
                  <option value="Emergency relief">Emergency relief</option>
              </select>
        </div>
      </div>
      
      <br>
      <input class="btn btn-2 datasubmit" type="submit" >

    </form>





  <script>
       $(document).ready(function() {
        $('#multiple-checkboxes').multiselect({
          includeSelectAllOption: true,
        });
    });
  </script>







